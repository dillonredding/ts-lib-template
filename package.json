    "build": "npm run clean && npm run compile && npm run lint && npm run format:check",
    "clean": "rimraf dist",
    "compile": "tsc --project tsconfig.build.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:watch": "npm run test -- --watch"
  },
  "author": "{{author}}",
  "license": "MIT",
  "homepage": "https://github.com/{{org-or-user}}/{{repo-name}}#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/{{org-or-user}}/{{repo-name}}.git"
  },
  "bugs": {
    "url": "https://github.com/{{org-or-user}}/{{repo-name}}/issues"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.11",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^8.4.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.3.0",
    "jest": "^27.4.3",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  }
